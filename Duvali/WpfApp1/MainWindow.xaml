<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Siemens S7 1200" 
        Height="535" 
        Width="806">
    <Grid Loaded="Grid_Loaded" Unloaded="Grid_Unloaded" Margin="0,0,0,0.2" Background="#FF383838">

        <Frame x:Name="MainFrame" Content="To load pages" Margin="0,55,0,0" NavigationUIVisibility="Hidden" />
        <StackPanel Orientation="Horizontal" Height="53" VerticalAlignment="Top" Background="#FFBCBCBC">
            <Button x:Name="pbConn" Content="Connection" Width="150" Height=" 44" FontSize="18" Margin="10,0,0,0" Click="PB_ConnectionClickHandler" />
            <Button x:Name="pbData" Content="Data"  Width="150" Height=" 44"  FontSize="18" Margin="10,0,0,0" Click="PB_DataClickHandler"/>
        </StackPanel>

    </Grid>
</Window>
